<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>default</LangVersion>
        <AssemblyName>AWS.Lambda.Powertools.Idempotency.Tests</AssemblyName>
        <RootNamespace>AWS.Lambda.Powertools.Idempotency.Tests</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
